{
  "name": "Grand Warden",
  "description": "Secure Password Manager - Your digital guardian for all your passwords",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "hello_extensions.png"
  },
  "host_permissions": [
    "http://localhost:5173/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["assets/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "hello_extensions.png",
    "32": "hello_extensions.png",
    "48": "hello_extensions.png",
    "128": "hello_extensions.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ]
}